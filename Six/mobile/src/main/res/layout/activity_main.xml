<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="46dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/todo"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/car" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/lockB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="200dp"
        app:button_icon="@drawable/lock"
        app:button_icon_height="25dp"
        app:button_icon_width="25dp"
        app:expandable_area_color="@color/colorAccent"
        app:hide_text="Lock"
        app:hide_text_color="@android:color/black"
        app:hide_text_size="4pt"
        app:icon_button_color="@color/colorPrimaryDark"
        app:magic_button_size="50dp" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/openB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lockB"
        android:layout_marginBottom="236dp"
        app:button_icon="@drawable/open"
        app:button_icon_height="25dp"
        app:button_icon_width="25dp"
        app:expandable_area_color="@color/J1"
        app:hide_text="Open"
        app:hide_text_color="@android:color/black"
        app:hide_text_size="4pt"
        app:icon_button_color="@color/J2"
        app:magic_button_size="50dp" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/mapB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lockB"
        android:layout_marginBottom="154dp"
        app:button_icon="@drawable/map"
        app:button_icon_height="25dp"
        app:button_icon_width="25dp"
        app:expandable_area_color="@color/J5"
        app:hide_text="Map"
        app:hide_text_color="@android:color/black"
        app:hide_text_size="4pt"
        app:icon_button_color="@color/J3"
        app:magic_button_size="50dp" />

</RelativeLayout>